@model OccupancyTracker.ViewModels.Building.BuildingViewModel

<div id="Building">
    <h1>@Model.Name</h1>
    <h3>Building Rough Occupancy: @Model.Occupancy</h3>
    <hr />
    <h4>Building Spaces</h4>
    <div id="csbSpacesTable">
        <table class="table" id="spacesIndexTable">
            <thead>
                <tr>
                    <th>Space</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var space in Model.Spaces.Spaces)
                {
                    string col = space.Occupied ? "indianred" : "forestgreen";
                    string status = space.Occupied ? "Occupied" : "Unoccupied";
                    <tr class="spaceRow">
                        <td class="spaceName">@space.Name</td>
                        <td class="spaceStatus" style="color: @col">@status</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>