@{
    ViewData["Title"] = "Home Page";
}

<div id="homeCarousel" class="carousel slide w-100" data-ride="carousel" data-interval="4000">

    <ol class="carousel-indicators">
        <li data-target="homeCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#homeCarousel" data-slide-to="1"></li>
        <li data-target="#homeCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/carosel1.png" alt="Slide 1" />
            <div class="carousel-caption d-none d-md-block" style="background-color:#a6192e">
                <p>Stay informed on the Occupancy Rates of Buildings on Campus.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/carosel2.png" alt="Slide 2" />
            <div class="carousel-caption d-none d-md-block" style="background-color:#a6192e">
                <p>Keep Safe by checking how busy computer labs are before entering.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/carosel3.png" alt="Slide 3" />
            <div class="carousel-caption d-none d-md-block" style="background-color:#a6192e">
                <p>Avoid highly busy areas by seeing what spaces are in use.</p>
            </div>
        </div>
    </div>

